{
    "name": "purelines/whatsapp-api-sdk-php",
    "description": "Fixed version of PHP SDK for Whapi.Cloud API to interact with WhatsApp via HTTP.",
    "keywords": [
        "sdk",
        "api",
        "whatsapp",
        "whapi"
    ],
    "homepage": "https://whapi.cloud/whatsapp-api-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "purelines",
            "homepage": "https://github.com/purelines/whatsapp-api-sdk-php"
        },
        {
            "name": "Whapi.Cloud",
            "homepage": "https://whapi.cloud"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.5",
        "guzzlehttp/psr7": "^1.9|^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "replace": {
        "whapi-cloud/whatsapp-api-sdk-php": "*"
    },
    "autoload": {
        "psr-4": { "OpenAPI\\Client\\" : "lib/" }
    }
}
